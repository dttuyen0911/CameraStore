@model IEnumerable<Product>
@{
    ViewData["Title"] = "Add new product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <!-- Form controls -->
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">ADD NEW PRODUCT</h4>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Name</label>
                        <input type="text"
                               class="form-control"
                               id="exampleFormControlInput1"
                               placeholder="Enter name of product" />
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Image</label>
                        <input class="form-control" type="file" id="formFile" />
                    </div>
                    <div>
                        <label for="exampleFormControlTextarea1" class="form-label">Enter description of product</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Price</label>
                        <input type="text"
                               class="form-control"
                               id="exampleFormControlInput1"
                               placeholder="Enter price of product" />
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Status</label>
                        <div class="form-check form-check-inline mt-3">
                            <input class="form-check-input"
                                   type="radio"
                                   name="inlineRadioOptions"
                                   id="inlineRadio1"
                                   value="option1" />
                            <label class="form-check-label" for="inlineRadio1">New</label>
                        </div>
                        <div class="form-check form-check-inline mt-3">
                            <input class="form-check-input"
                                   type="radio"
                                   name="inlineRadioOptions"
                                   id="inlineRadio1"
                                   value="option1" />
                            <label class="form-check-label" for="inlineRadio1">Old</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1" class="form-label">Sale</label>
                        <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                            <option selected>Choose the sale level</option>
                            <option value="1">No</option>
                            <option value="2">Sale 30%</option>
                            <option value="3">Sale 50%</option>
                            <option value="3">Sale 70%</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Quantity</label>
                        <input type="number"
                               class="form-control"
                               id="exampleFormControlInput1"
                               placeholder="Enter quantity of product" />
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1" class="form-label">Category</label>
                        <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                            <option selected>Choose the category of product</option>
                            <option value="1">No</option>
                            <option value="2">Sale 30%</option>
                            <option value="3">Sale 50%</option>
                            <option value="3">Sale 70%</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1" class="form-label">Supplier</label>
                        <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                            <option selected>Choose the supplier of product</option>
                            <option value="1">No</option>
                            <option value="2">Sale 30%</option>
                            <option value="3">Sale 50%</option>
                            <option value="3">Sale 70%</option>
                        </select>
                    </div>

                    <div class="col-sm-10">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Back to list</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

