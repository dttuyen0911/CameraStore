@model CameraStore.Models.Product

@{
    ViewData["Title"] = "Add new product";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">ADD NEW PRODUCT</h4>
                <form asp-controller="Product" asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="card-body">
                    <div class="mb-3">
                        <span asp-validation-for="proName"></span>
                        <label asp-for="proName" for="exampleFormControlInput1" class="form-label">Name</label>
                        <input type="text"
                               asp-for="proName"
                               class="form-control"
                               id="uploadProName"
                               aria-required="true"
                               placeholder="Enter name of product" required />
                    </div>
                    <div class="mb-3">
                            <label asp-for="proImage" class="control-label">Image</label>
                            <input asp-for="proImage" type="file" onchange="chooseFile(this)" accept="image/gif, image/jpeg, image/png" style="width: 100%" class="form-control" required />
                            <div> <img style="height:200px;width:250px" id="image" /></div>
                            <span asp-validation-for="proImage" class="text-danger"></span>
                    </div>
                    <div>
                        <span asp-validation-for="proDescription"></span>
                        <label asp-for="proDescription"for="exampleFormControlTextarea1" class="form-label">Enter description of product</label>
                        <textarea class="form-control" asp-for ="proDescription" id="uploadProDes" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="proStatus"></span>
                        <label asp-for="proStatus" for="exampleFormControlInput1" class="form-label">Status</label>
                        <input type="text"
                               asp-for="proStatus"
                               class="form-control"
                               id="uploadProSta"
                               aria-required="true"
                               placeholder="Enter status of product" required />
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="proPrice"></span>
                        <label asp-for = "proPrice" for="exampleFormControlInput1" class="form-label">Price</label>
                        <input type="text"
                               asp-for="proPrice"
                               class="form-control"
                               id="uploadProPrice"
                               placeholder="Enter price of product" required/>
                    </div>
                    
                    <div class="mb-3">
                        <span asp-validation-for="proPercent"></span>
                        <label asp-for = "proPercent" for="exampleFormControlInput1" class="form-label">Percent sale</label>
                        <input type="text"
                               asp-for="proPercent"
                               class="form-control"
                               id="uploadProSale"
                               placeholder="Enter percent sale of product" />
                            <div id="defaultFormControlHelp" class="form-text">
                                In case there is no sale, a value that can be left blank.
                            </div>
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="proQuantity"></span>
                        <label asp-for="proQuantity" for="exampleFormControlInput1" class="form-label">Quantity</label>
                        <input type="number"
                               asp-for="proQuantity"
                               class="form-control"
                               id="uploadProQuantity"
                               min="1"
                               placeholder="Enter quantity of product" required/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Category</label>
                        <select asp-for = "cateID" asp-items="ViewBag.cateID" class="form-select" id="uploadProCate" aria-label="Default select example">
                            <option>Choose the category of product</option>
                        </select>
                    </div>
                    <div class="mb-3">
                            <label asp-for="Supplier" class="form-label">Supplier</label>
                            <select asp-for="supID" asp-items="ViewBag.supID" class="form-select" id="uploadProSup" aria-label="Default select example">
                                <option>Choose the supplier of product</option>
                            </select>
                    </div>
                    <div class="col-sm-10">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Back to list</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var render = new FileReader();

            render.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            render.readAsDataURL(fileInput.files[0]);
        }
    }
</script>