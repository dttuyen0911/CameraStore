@model Role

@{
    ViewData["Title"] = "Update role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form asp-controller="Role" asp-action="Edit" enctype="multipart/form-data" method="post">
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <!-- Form controls -->
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">UPDATE ROLE</h4>
                    <div class="card-body">
                        <div class="mb-3">
                            <span asp-validation-for="roleID"></span>
                            <label for="exampleFormControlReadOnlyInput1" class="form-label">ID</label>
                            <input class="form-control"
                                   type="text"
                                   asp-for="roleID"
                                   id="updateCateID"
                                   placeholder="ID"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <span asp-validation-for="name"></span>
                            <label for="exampleFormControlInput1" class="form-label">Name</label>
                            <input type="text"
                                   class="form-control"
                                   asp-for="name"
                                   id="uploadCateName"
                                   placeholder="Enter name of role" />
                        </div>
                        <div class="mb-3">
                        <div>
                            <span asp-validation-for="description"></span>
                            <label for="exampleFormControlTextarea1" class="form-label">Enter description of role</label>
                            <textarea class="form-control" asp-for="description" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        </div>
                        <div class="col-sm-10">
                            <a asp-controller="Role" asp-action="Index" class="btn btn-primary">Back to list</a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>
    </div>
</form>
