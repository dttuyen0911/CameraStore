@model CameraStore.Models.Role

@{
    ViewData["Title"] = "View detail feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">VIEW DETAIL FEEDBACK</h4>
                <form asp-controller="Role" asp-action="detailRole" enctype="multipart/form-data" method="post">
                    <div class="card-body">
                        <div class="mb-3">
                            <span asp-validation-for="roleID"></span>
                            <label asp-for="roleID" for="exampleFormControlReadOnlyInput1" class="form-label">ID</label>
                            <input class="form-control"
                                   type="text"
                                   asp-for="roleID"
                                   id="detailRoleID"
                                   placeholder="ID"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <span asp-validation-for="name"></span>
                            <label asp-for="name" for="exampleFormControlReadOnlyInput1" class="form-label">Name</label>
                            <input class="form-control"
                                   type="text"
                                   asp-for="name"
                                   id="detailRoleName"
                                   placeholder="name"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <div>
                                <span asp-validation-for="description">Description</span>
                                <label asp-for="description" for="exampleFormControlTextarea1" class="form-label">Enter description of role</label>
                                <textarea readonly class="form-control" asp-for="description" id="detailRoleDes" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <a asp-controller="Role" asp-action="Index" class="btn btn-primary">Back to list</a>
                            <a asp-controller="Role" asp-action="Edit" asp-route-id="@Model.roleID"
                               class="btn btn-primary">Update</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
