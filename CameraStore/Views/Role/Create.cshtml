@model CameraStore.Models.Role

@{
    ViewData["Title"] = "Add new role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <!-- Form controls -->
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">ADD NEW ROLE</h4>
                <form asp-controller="Role" asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="card-body">
                    <div class="mb-3">
                        <span asp-validation-for="name"></span>
                        <label asp-for="name" for="exampleFormControlInput1" class="form-label">Name</label>
                        <input type="text"
                               class="form-control"
                               asp-for="name"
                               id="uploadCateName"
                               placeholder="Enter name of role" />
                    </div>
                    <div>
                        <span asp-validation-for="description"></span>
                        <label asp-for="description"for="exampleFormControlTextarea1" class="form-label">Enter description of role</label>
                        <textarea class="form-control"asp-for="description" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="col-sm-10">
                        <a asp-controller="Role" asp-action="Index" class="btn btn-primary">Back to list</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>