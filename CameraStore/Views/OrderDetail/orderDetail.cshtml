@model IEnumerable<CameraStore.Models.OrderDetail>

@{
    ViewData["Title"] = "View detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>View order detail</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <a asp-controller="OrderDetail" asp-action="viewOrder">View order</a>
                        <span>View order detail</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card" style="border-radius: 10px;">
                    @foreach (var item in Model)
                    {
                        var orderId = item.Order.orderID;
                        <div class="card-header px-4 py-2">
                            <h5 class="text-muted mb-0">OrderID:<span style="color: #a8729a;">@item.orderID</span>!</h5>
                        </div>
                        <div class="container py-5 h-100">
                            <div class="row d-flex justify-content-center align-items-center h-100">
                                <div class="col">

                                    <div class="card card-stepper" style="border-radius: 10px;">
                                        <div class="card-body p-4">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="d-flex flex-column">
                                                    <span class="lead fw-normal">Order information</span>
                                                    <span class="text-muted small">Full name: @item.Order.orderFullname</span>
                                                    <span class="text-muted small">Address: @item.Order.orderAddress</span>
                                                    <span class="text-muted small">Telephone: @item.Order.orderPhone </span>
                                                    <span class="text-muted small">Payment method: @item.Order.paymentMethod</span>
                                                </div>
                                            </div>
                                            <hr class="my-4">

                                            <div class="d-flex flex-row justify-content-between align-items-center align-content-center">
                                                @if (!item.Order.orderStatus)
                                                {
                                                    <span class="d-flex justify-content-center align-items-center big-dot dot">
                                                        <i class="fa fa-check text-white"></i>
                                                    </span>
                                                    <hr class="flex-fill track-line">
                                                }
                                                else if (!item.Order.IsShipped)
                                                {
                                                    <span class="dot"></span>
                                                    <hr class="flex-fill track-line">
                                                    <span class="d-flex justify-content-center align-items-center big-dot dot">
                                                        <i class="fa fa-check text-white"></i>
                                                    </span>
                                                    <hr class="flex-fill track-line">
                                                }
                                                else if (DateTime.Today.Date >= item.Order.orderDelivery.Date)
                                                {
                                                    <span class="dot"></span>
                                                    <hr class="flex-fill track-line">
                                                    <span class="dot"></span>
                                                    <hr class="flex-fill track-line">
                                                    <span class="dot"></span>
                                                    <hr class="flex-fill track-line">
                                                    <span class="d-flex justify-content-center align-items-center big-dot dot">
                                                        <i class="fa fa-check text-white"></i>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="dot"></span>
                                                    <hr class="flex-fill track-line">
                                                    <span class="dot"></span>
                                                    <hr class="flex-fill track-line">
                                                    <span class="dot"></span>
                                                    <hr class="flex-fill track-line">
                                                    <span class="dot"></span>
                                                }

                       
                     
                                            </div>
                                            <div class="d-flex flex-row justify-content-between align-items-center">
                                                <div class="d-flex flex-column align-items-start">
                                                    <span>Order process</span>
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <span>
                                                        Order Shipped
                                                    </span>
                                                </div>
                                                <div class="d-flex flex-column justify-content-center align-items-center">
                                                    <span>Order En Route</span>
                                                </div>
                                                <div class="d-flex flex-column align-items-end"><span>Delivered</span></div>
                                            </div>
                                                @if (DateTime.Today.Date >= item.Order.orderDelivery.Date)
                                                {   
                                                    if(@item.Order.IsDelivered == false)
                                                    {
                                                    <button id="receivedButton" class="btn btn-success" style="margin-left: 82%; width: 200px;" data-order-id="@item.Order.orderID">
                                                        Received
                                                    </button>
                                                    }
                                                    else
                                                    {
                                                    <button class="btn btn-success" onclick="openForm(@item.Order.orderID); checkSubmit(@item.Order.orderID)" style="margin-left: 82%; width: 200px;">
                                                        Feedback
                                                    </button>
                                                    <div class="form-popup" id="myForm">
                                                        <form id="feedbackForm" asp-action="Create" asp-controller="Feedback" method="post" class="form-container" enctype="multipart/form-data">
                                                            <input type="hidden" id="orderId" name="orderId" value="" />
                                                            <h1>Feedback</h1>
                                                            <label for="fullname"><b>Full Name</b></label>
                                                            <input type="text" id="fullname" name="Fullname" value="@item.Order.orderFullname" readonly class="form-control" data-fullname="@item.Order.orderFullname" />

                                                            <div class="rating" style="font-size: xx-large;">
                                                                <i class="fa fa-star star" data-value="1"></i>
                                                                <i class="fa fa-star star" data-value="2"></i>
                                                                <i class="fa fa-star star" data-value="3"></i>
                                                                <i class="fa fa-star star" data-value="4"></i>
                                                                <i class="fa fa-star star" data-value="5"></i>
                                                            </div>

                                                            <div>
                                                                <label for="uploadProDes" class="form-label">Please give us feedback about the product</label>
                                                                <textarea id="uploadProDes" name="feedDescription" class="form-control" rows="3" required></textarea>
                                                            </div>

                                                            <div class="mb-3">
                                                                <!-- Thêm input để chọn file hình ảnh -->
                                                                <input type="file" onchange="chooseFile(this)" style="width: 100%" id="feedImage" name="feedImage" accept="image/gif, image/jpeg, image/png" class="form-control" />
                                                                <div> <img style="height:200px;width:250px" id="image" /></div>
                                                                <span class="text-danger"></span>
                                                            </div>

                                                            <button type="submit" class="btn btn-primary">Submit</button>
                                                            <button type="button" class="btn cancel" onclick="closeForm()">Cancel</button>
                                                        </form>
                                                    </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <button class="btn btn-success" disabled style="margin-left: 82%; width: 200px;">
                                                        Received
                                                    </button>
                                                }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <div class="shopping__cart__table">
                                    <table>
                                        <tr>
                                            <th style="width: 30%;">Product</th>
                                            <th style="text-align: center;width: 10%;">Quantity</th>
                                            <th style="text-align: center;width: 10%;">Total</th>
                                            <th style="text-align: center;width: 10%;">Order date</th>
                                            <th style="text-align: center;width: 17%">Estimated delivery date</th>
                                            <th style="width: 5%;text-align: center;">Status</th>
                                        </tr>
                                        <tbody>
                                            <tr>
                                                <td class="product__cart__item" style="width: 30%;">
                                                    <div class="product__cart__item__pic">
                                                        <a class="menu-link" asp-area="" asp-controller="Home" asp-action="productDetail" asp-route-id="@item.proID">
                                                            <img src="~/Image/@item.Product.proUrlImage" style="width: 150px; height: 100px">
                                                        </a>
                                                    </div>
                                                    <div class="product__cart__item__text">
                                                        <h6>@item.Product.proName</h6>
                                                    </div>
                                                </td>
                                                <td class="quantity__item" style="text-align: center;width: 8%;">
                                                    <h5 style="text-align: center;">@item.quantity</h5>
                                                </td>
                                                <td class="cart__price" style="text-align: center; width: 10%; ">
                                                    @item.unitPrice
                                                </td>
                                                <td class="cart__close" style="
                                                   text-align: center;
                                                   width: 10%;
                                                               ">
                                                    @item.Order.orderDate
                                                </td>
                                                <td class="cart__close" style="text-align: center;width: 17%"> @item.Order.orderDelivery.ToString("dd/MM/yyyy")</td>
                                                <td class="cart__close" style=" width: 5%; text-align: center;">
                                                    @if (@item.Order.orderStatus == false)
                                                    {
                                                        <button class="btn btn-dark">Pending</button>
                                                    }
                                                    else if (@item.Order.orderStatus == true && @item.Order.IsShipped == true && @item.Order.IsDelivered == true)
                                                    {
                                                        <button class="btn btn-success">Delivered</button>
                                                    }
                                                    else if (@item.Order.orderStatus == true && @item.Order.IsShipped == true)
                                                    {
                                                        <button class="btn btn-primary">EnRoute</button>
                                                    }
                                                    else if (@item.Order.orderStatus == true && @item.Order.IsShipped == false)
                                                    {
                                                        <button class="btn btn-warning">Confirmed</button>
                                                    }

                                                </td>
                                            </tr>

                                            <tr>
                                                <td colspan="7">

                                                    <div class="d-flex justify-content-between pt-2">
                                                        <p class="fw-bold mb-0">Please pay @item.unitPrice when receiving goods</p>
                                                    </div>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<div id="notification" style="display: none; position: fixed;
	                top: 50%;
	                left: 50%;
	                transform: translate(-50%, -50%);
	                z-index: 1000;" class="alert alert-success" role="alert">
    Congratulations on successfully receiving the goods, don't forget to leave me a feedback.
</div>
<div id="notification1" style="display: none; position: fixed;
	                top: 50%;
	                left: 50%;
	                transform: translate(-50%, -50%);
	                z-index: 1000;" class="alert alert-success" role="alert">
    Thanks for feedback.
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#receivedButton").on("click", function () {
            var orderId = $(this).data("order-id");

            // Thực hiện yêu cầu AJAX
            $.ajax({
                url: '/Order/Received',
                type: 'POST',
                data: { orderId: orderId },
                success: function (response) {
                    if (response.success) {
                        $('#notification').fadeIn().delay(1000).fadeOut();
                       
                    } else {
                        console.log("Received action failed.");
                    }
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        });
    });
</script>
<script>
    function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var render = new FileReader();

            render.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            render.readAsDataURL(fileInput.files[0]);
        }
    }
</script>
<script>
    function openForm(orderId) {
        document.getElementById("myForm").style.display = "block";
        document.getElementById("orderId").value = orderId; // Set giá trị orderId vào input hidden trong form
    }
    function closeForm() {
        document.getElementById("myForm").style.display = "none";
    }
</script>
<script>
    let selectedRating = 0; // Biến global để lưu giá trị rating

    const stars = document.querySelectorAll('.star');

    stars.forEach((star) => {
        star.addEventListener('click', function () {
            const rating = parseInt(this.getAttribute('data-value'));
            selectedRating = rating; // Lưu giá trị rating vào biến global
            const orderId = document.getElementById('orderId').getAttribute('data-orderid'); // Lấy orderId từ thuộc tính data-orderid
            saveRating(rating, orderId); // Truyền cả rating và orderId tới hàm saveRating
            highlightStars(rating);
        });
    });

    function highlightStars(rating) {
        stars.forEach((star, index) => {
            if (index < rating) {
                star.classList.add('fa-star');
                star.classList.remove('fa-star-o');
            } else {
                star.classList.remove('fa-star');
                star.classList.add('fa-star-o');
            }
        });
    }

    function saveRating(rating, orderId) {
        // Tạo đối tượng chứa dữ liệu rating và orderId
        const ratingData = {
            orderId: orderId,
            rating: rating
        };

        // Gửi yêu cầu AJAX
        $.ajax({
            type: 'POST',
            url: '/Feedback/Create', // Đường dẫn đến action Create trong controller Feedback
            contentType: 'application/json',
            data: JSON.stringify(ratingData),
            success: function (response) {
                console.log(response); // Hiển thị kết quả trả về từ server
            },
            error: function (xhr, status, error) {
                console.error(error); // Hiển thị lỗi nếu có
            }
        });
    }

    function submitFeedback() {
        const fullname = document.getElementById('fullname').value;
        const feedDescription = document.getElementById('uploadProDes').value;
        const feedImage = document.getElementById('feedImage').files[0]; // Lấy file hình ảnh
        const orderId = document.getElementById('orderId').getAttribute('data-orderid');

        // Lấy giá trị rating từ biến global
        const rating = selectedRating;

        // Tạo đối tượng chứa dữ liệu feedback và gửi yêu cầu AJAX
        const feedbackData = {
            Fullname: fullname,
            feedDescription: feedDescription,
            feedImage: feedImage,
            rating: rating
        };

        // Gửi yêu cầu AJAX
        $.ajax({
            type: 'POST',
            url: '/Feedback/Create',
            contentType: 'application/json',
            data: JSON.stringify(feedbackData),
            success: function (response) {
                if (response.responseText) {
                    $('#notification1').fadeIn().delay(1000).fadeOut();
                }
            },
            error: function (xhr, status, error) {
                console.error(error); // Hiển thị lỗi nếu có
            },
        });
    }

    function checkSubmit(orderId) {
        // Gửi yêu cầu AJAX để kiểm tra xem feedback đã được submit chưa
        $.ajax({
            type: 'GET',
            url: '/Feedback/CheckSubmit',
            data: { orderId: orderId },
            success: function (response) {
                if (response.success) {
                    // Nếu feedback đã được submit, hiển thị thông tin feedback trên form
                    const feedback = response.feedback;
                    const fullname = document.getElementById('fullname').dataset.fullname;
                    // Đặt giá trị fullname vào input
                    document.getElementById('fullname').value = fullname;
                    document.getElementById('uploadProDes').value = feedback.feedDescription;
                    // Hiển thị hình ảnh nếu có
                    if (feedback.feedImageUrl) {
                        document.getElementById('image').src = '~/Image/feedback.feedUrlImage' + feedback.feedImageUrl;
                        document.getElementById('image').style.display = 'block'; // Hiển thị hình ảnh
                    }

                    // Hiển thị rating
                    highlightStars(feedback.starRating);
                    // Hiển thị nút Submit để người dùng có thể submit lại feedback đã có
                    document.getElementById('submitButton').style.display = 'block';
                } else {
                    // Nếu chưa submit, hiển thị form để người dùng nhập feedback mới
                    document.getElementById('submitButton').style.display = 'block';
                }
            },
            error: function (xhr, status, error) {
                console.error(error); // Hiển thị lỗi nếu có
            }
        });
    }

</script>


