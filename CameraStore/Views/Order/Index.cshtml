@model IEnumerable<Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Order Table</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr class="text-nowrap">
                            <th>#</th>
                            <th>Account</th>
                            <th>Full name</th>
                            <th>Telephone</th>
                            <th>Address</th>
                            <th>Order Date</th>
                            <th>Order Delivery</th>
                            <th>Total Amount</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <th scope="row">@order.orderID</th>
                                <td>@order.customerID</td>
                                <td>@order.orderFullname</td>
                                <td>@order.orderPhone</td>
                                <td>@order.orderAddress</td>
                                <td>@order.orderDate</td>
                                <td>@order.orderDelivery</td>
                                <td>@order.totalAmount</td>
                                <td>@order.paymentMethod</td>
                                <td>
                                    @if (order.orderStatus == false)
                                    {
                                        <button class="btn btn-dark">Pending</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-success">Confirmed</button>
                                    }
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="OrderDetail" asp-action="Index" asp-route-id="@order.orderID"><i class="bx bx-edit-alt me-1"></i>View detail</a>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="Confirm" asp-route-orderId="@order.orderID"><i class="bx bx-check-circle me-1"></i> Confirm</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>