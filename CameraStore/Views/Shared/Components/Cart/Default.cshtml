@model IEnumerable<CameraStore.Models.CartDetails>

    <div class="qty" style="
        position: absolute;
        right: 20px;
        top: 5px;
        width: 20px;
        height: 20px;
        line-height: 20px;
        text-align: center;
        border-radius: 50%;
        font-size: 10px;
        color: #FFF;
        background-color: #D10024;">
