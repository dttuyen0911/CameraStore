@model IEnumerable<CameraStore.Models.CartDetails>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Shopping Cart</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <a asp-controller="Home" asp-action="Store">Shop</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    @if (Model != null && Model.Any())
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="shopping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                @if (item.Product != null)
                                                {
                                                    <img src="~/Image/@item.Product.proUrlImage" style="width: 150px; height: 100px" alt="@item.Product.proName">
                                                }
                                            </div>
                                            <div class="product__cart__item__text">
                                                @if (item.Product != null)
                                                {
                                                    <h6>@item.Product.proName</h6>
                                                    <h5>@item.Product.proPrice</h5>
                                                }
                                            </div>
                                        </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="pro-qty-2">
                                                    @if (item != null && item.Product != null)
                                                    {
                                                        <input type="text" value="@item.quantity" onchange="updateCart(@item.Product.proID, this.value)">
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price">
                                            @if (item.Product != null)
                                            {
                                                <span>@(item.Product.proPrice * item.quantity)</span>
                                            }
                                        </td>
                                        <td class="cart__close">
                                            @if (item.Product != null)
                                            {
                                                <a href="#" onclick="removeFromCart(@item.Product.proID)">
                                                    <i class="fa fa-close"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a asp-controller="Home" asp-action="Index">Continue Shopping</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn update__btn">
                                <a href="#" onclick="updateCart()">Update cart</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart__discount">
                        <h6>Discount codes</h6>
                        <form action="#">
                            <input type="text" placeholder="Coupon code">
                            <button type="submit">Apply</button>
                        </form>
                    </div>
                    <div class="cart__total">
                        <h6>Cart total</h6>
                        <ul>
                            @if (Model != null && Model.Any())
                            {
                                <li>Subtotal <span id="subtotal">$ @Model.Where(item => item != null && item.Product != null).Sum(item => item.Product.proPrice * item.quantity)</span></li>
                                <!-- Calculate total price for all items in the cart -->
                                <li>Total <span id="total">$ @Model.Where(item => item != null && item.Product != null).Sum(item => item.Product.proPrice * item.quantity)</span></li>
                            }
                        </ul>
                        <a class="primary-btn" asp-area="" asp-controller="Order" asp-action="CreateOrder">Proceed to checkout</a>
                    </div>

                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>@ViewBag.Message</p>
                </div>
            </div>
        </div>
    }
</section>
<!-- Shopping Cart Section End -->

@section Scripts {
    <script>
        function updateCart(productId, quantity) {
            // Perform update cart operation here using Ajax
            // For example:
            $.ajax({
                url: "/Cart/UpdateCart",
                type: "POST",
                data: { id: productId, quantity: quantity },
                success: function (data) {
                    // Update the subtotal and total
                    $('#subtotal').text('$ ' + data.subtotal);
                    $('#total').text('$ ' + data.total);
                },
                error: function () {
                    alert('Error updating cart.');
                }
            });
        }

        function removeFromCart(productId) {
            // Perform remove from cart operation here using Ajax
            // For example:
            $.ajax({
                url: "/Cart/RemoveFromCart",
                type: "POST",
                data: { id: productId },
                success: function () {
                    // Reload the page or update the cart summary
                    location.reload();
                },
                error: function () {
                    alert('Error removing from cart.');
                }
            });
        }
    </script>
}
