@model IEnumerable<CartDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Cart Table</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr class="text-nowrap">
                            <th>#</th>
                            <th>User</th>
                            <th>Product</th>
                            <th>Quantity Total</th>
                            <th>Price Total</th>
                            <th>Time Stamp</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach(var cartdetail in Model)
                            {
                                <th scope="row">@cartdetail.cartID</th>
                                <td>@cartdetail.Cart.customerID</td>
                            <td>@cartdetail.proID</td>
                            <td>@cartdetail.quantity</td>
                            <td>@cartdetail.price</td>
                            <td>@cartdetail.Cart.timeStamp</td>
                            <th> 
                                <a asp-controller="CartDetail" asp-action="Index" 
                                class="btn btn-primary">View Detail</a>
                             </th>
                            }
                            
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>