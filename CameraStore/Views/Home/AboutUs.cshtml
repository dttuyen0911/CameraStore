@model (IEnumerable<Customer>,IEnumerable<Category>, IEnumerable<Supplier>,IEnumerable<Product>)
@{
    ViewData["Title"] = "About Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>About Us</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>About Us</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="about spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="about__pic">
                    <img src="~/cameraStoreLayout/img/about/about-us.jpg" alt="">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="about__item">
                    <h4>Who We Are ?</h4>
                    <p>
                        We are new students and have the same direction and passion. Therefore, we decided to establish a digital camera store.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="about__item">
                    <h4>Who We Do ?</h4>
                    <p>Since the establishment of the digital camera store, we have been providing users in the Vietnamese market with cameras of good quality and prices suitable for Vietnamese people.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="about__item">
                    <h4>Why Choose Us</h4>
                    <p>The reason you should choose us is very simple because we are Vietnamese, so we understand the needs of Vietnamese people. We are committed to bringing you the best quality products.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- About Section End -->
<!-- Testimonial Section Begin -->
<section class="testimonial">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                <div class="testimonial__text">
                    <p>
                        Camera digital store is a store founded in 2024 by Do Thi Tuyen. Camera digital store is committed to providing customers with wonderful experiences. Here, we sell products with 3 criteria: beautiful, cheap and durable. Products in our store are reputable and 100% genuine. Our store's slogan is "Customer satisfaction is the driving force for the store to grow more and more".
                    </p>

                </div>
            </div>
            <div class="col-lg-6 p-0">
                <div class="testimonial__pic set-bg">
                    <img src="/camerastorelayout/img/about/testimonial-pic.jpg" style="
                        width: 640px;
                        height: 670px;
                    ">
                </div>
            </div>
        </div>
    </div>

</section>
<!-- Testimonial Section End -->
<!-- Counter Section Begin -->
<section class="counter spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="counter__item">
                    <div class="counter__item__number">
                        <h2 class="cn_num">@Model.Item1.Count()</h2>
                    </div>
                    <span>Our <br />Clients</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="counter__item">
                    <div class="counter__item__number">
                        <h2 class="cn_num">@Model.Item2.Count()</h2>
                    </div>
                    <span>Total <br />Categories</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="counter__item">
                    <div class="counter__item__number">
                        <h2 class="cn_num">@Model.Item3.Count()</h2>
                    </div>
                    <span>Total <br />Supplier</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="counter__item">
                    <div class="counter__item__number">
                        <h2 class="cn_num">@Model.Item4.Count()</h2>
                    </div>
                    <span>Total <br />Product</span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Counter Section End -->
<!-- Team Section Begin -->
<section class="team spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Our Team</span>
                    <h2>Meet Our Team</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="team__item">
                    <img src="~/cameraStoreLayout/img/about/team-1.jpg" alt="">
                    <h4>DO QUOC SON</h4>
                    <span>Admin</span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="team__item">
                    <img src="~/cameraStoreLayout/img/about/team-2.jpg" alt="">
                    <h4>DO THI TUYEN</h4>
                    <span>Owner</span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="team__item">
                    <img src="~/cameraStoreLayout/img/about/team-3.jpg" alt="">
                    <h4>TRAN NHUT BANG</h4>
                    <span>Staff</span>
                </div>
            </div>
        </div>
    </div>
</section>