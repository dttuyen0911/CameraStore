<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Cart Table</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr class="text-nowrap">
                            <th>#</th>
                            <th>User</th>
                            <th>Quantity Total</th>
                            <th>Price Total</th>
                            <th>Time Stamp</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cart in Model.Item4)
                        {
                            <tr>
                                <td>@cart.cartID</td>
                                <td>@cart.customerID</td>
                                <td>@cart.cartQuantityTotal</td>
                                <td>$@cart.cartPriceTotal</td>
                                <td>@cart.timeStamp</td>
                                <td>
                                    <a asp-controller="CartDetail" asp-action="Index" asp-route-id="@cart.cartID" class="btn btn-primary">View Detail</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

