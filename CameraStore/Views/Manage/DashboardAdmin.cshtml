@model (IEnumerable<Customer>, IEnumerable<Role>)

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Account Table</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Full name</th>
                                            <th>Email</th>
                                            <th>Password</th>
                                            <th>Phone</th>
                                            <th>Create At</th>
                                            <th>Role</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var customer in Model.Item1)
                                        {
                                            <tr>
                                                <th scope="row">@customer.customerID</th>
                                                <td>@customer.fullname</td>
                                                <td>@customer.email</td>
                                                <td>@customer.password</td>
                                                <td>@customer.telephone</td>
                                                <td>@customer.createAt</td>
                                                <td>@customer.roleID</td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                            <i class="bx bx-dots-vertical-rounded"></i>
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item" asp-controller="Customer" asp-action="detailCustomer" asp-route-id="@customer.customerID"><i class="bx bx-book-alt me-1"></i> View Detail</a>
                                                            <a class="dropdown-item" asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.customerID"><i class="bx bx-edit-alt me-1"></i> Update</a>
                                                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@customer.customerID" onclick="return confirm('Are you sure?');">
                                                                <i class="bx bx-trash me-1"></i> Delete
                                                            </a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Role Table</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var role in Model.Item2)
                                        {
                                            <tr>
                                                <th scope="row">@role.roleID</th>
                                                <td>@role.name</td>
                                                <td style="white-space: normal; word-wrap: break-word;">@role.description</td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                            <i class="bx bx-dots-vertical-rounded"></i>
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item" asp-controller="Role" asp-action="detailRole" asp-route-id="@role.roleID"><i class="bx bx-book-alt me-1"></i> View Detail</a>
                                                            <a class="dropdown-item" asp-controller="Role" asp-action="Edit" asp-route-id="@role.roleID"><i class="bx bx-edit-alt me-1"></i> Update</a>
                                                            <a class="dropdown-item" asp-action="Delete" asp-route-id=@role.roleID onclick="return confirm('Are You Sure?');"><i class="bx bx-trash me-1"></i> Delete</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>