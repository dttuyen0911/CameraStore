@model dynamic
@{
    ViewData["Title"] = "Top Products Chart";
    Layout = "~/Views/Shared/_OwnerLayout.cshtml";
}

<h2>Top Products Chart</h2>

<div id="pie-chart-container">
    <canvas id="top-products-chart"></canvas>
</div>

@section scripts {
    <script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetTopProducts", "Statistical")',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var productIds = data.labels;
                    var quantities = data.quantities;

                    // Khai báo một mảng để lưu trữ tên sản phẩm
                    var productNames = [];

                    // Lặp qua từng ID sản phẩm và truy vấn tên sản phẩm từ server
                    for (var i = 0; i < productIds.length; i++) {
                        $.ajax({
                            url: '@Url.Action("GetProductName", "Product")' + '?productId=' + productIds[i],
                            type: 'GET',
                            dataType: 'json',
                            async: false,
                            success: function (productName) {
                                productNames.push(productName);
                            }
                        });
                    }

                    var ctx = document.getElementById('top-products-chart').getContext('2d');
                    var topProductsChart = new Chart(ctx, {
                        type: 'pie',
                        data: {
                            labels: productNames, // Sử dụng tên sản phẩm thay vì ID sản phẩm
                            datasets: [{
                                label: 'Top Products',
                                data: quantities,
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.5)',
                                    'rgba(54, 162, 235, 0.5)',
                                    'rgba(255, 205, 86, 0.5)'
                                ],
                                borderColor: [
                                    'rgba(255, 99, 132, 1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 205, 86, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'top',
                                },
                                title: {
                                    display: true,
                                    text: 'Top 3 Products by Quantity Sold'
                                }
                            }
                        }
                    });
                }
            });
        });
    </script>

}
