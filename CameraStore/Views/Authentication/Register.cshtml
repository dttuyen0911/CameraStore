@model CameraStore.Models.Customer

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>
    .form-group {
        position: relative;
    }

        .form-group label {
            position: absolute;
            left: 10px; /* Điều chỉnh vị trí của icon zmdi-lock */
            top: 50%; /* Đưa icon zmdi-lock vào giữa theo chiều cao */
            transform: translateY(-50%);
        }

        .form-group input {
            padding-left: 30px; /* Để tạo khoảng trống bên trái cho icon zmdi-lock */
        }

    .input-with-icon {
        position: relative;
    }

        .input-with-icon input {
            padding-right: 35px; /* Để tạo khoảng trống phía bên phải cho icon mắt */
        }

        .input-with-icon .toggle-password {
            position: absolute;
            right: 10px; /* Điều chỉnh vị trí của icon mắt */
            top: 50%; /* Đưa icon mắt vào giữa theo chiều cao */
            transform: translateY(-50%);
            cursor: pointer;
        }
</style>
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="post" asp-controller="Authentication" asp-action="Register" enctype="multipart/form-data" class="register-form" id="login-form">
                    <div class="form-group">
                        <span asp-validation-for="fullname"></span>
                        <label asp-for="fullname" for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" asp-for="fullname" name="fullname" id="fullname" placeholder="Full name" />
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="email"></span>
                        <label asp-for="email" for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" asp-for="email" name="email" id="email" placeholder="Your Email" />
                    </div>

                    <div class="form-group">
                        <label asp-for="password" for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <div class="input-with-icon">
                            <input type="password" asp-for="password" name="password" id="password" placeholder="Password" />
                            <span class="toggle-password">
                                <i class="fa fa-eye" id="toggleCurrentPassword"></i>
                            </span>
                        </div>
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="telephone"></span>
                        <label asp-for="telephone" for="telephone"><i class="zmdi zmdi-phone"></i></label>
                        <input type="number" asp-for="telephone" name="telephone" id="telephone" placeholder="Telephone" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="images/signup-image.jpg" alt="sign up image"></figure>
                <a asp-area="" asp-controller="Authentication" asp-action="Login" class="signup-image-link">I am already member</a>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="signup-image-link"><i class="zmdi zmdi-home"></i>Continue Shopping</a>
            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const togglePassword = document.querySelector("#toggleCurrentPassword");
        const passwordInput = document.querySelector("#password");

        togglePassword.addEventListener("click", function () {
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);
            this.classList.toggle("fa-eye");
            this.classList.toggle("fa-eye-slash");
        });
    });
</script>
