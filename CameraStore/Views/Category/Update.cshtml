@model IEnumerable<Category>

@{
    ViewData["Title"] = "Update category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <!-- Form controls -->
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">UPDATE CATEGORY</h4>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="exampleFormControlReadOnlyInput1" class="form-label">ID</label>
                        <input
                        class="form-control"
                        type="text"
                        id="exampleFormControlReadOnlyInput1"
                        placeholder="ID"
                        readonly/>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Name</label>
                        <input type="text"
                               class="form-control"
                               id="exampleFormControlInput1"
                               placeholder="Enter name of category" />
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Image</label>
                        <input class="form-control" type="file" id="formFile" />
                    </div>
                    <div class = "mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Enter description of category</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="col-sm-10">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back to list</a>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>