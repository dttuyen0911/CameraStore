@model CameraStore.Models.Category

@{
    ViewData["Title"] = "View detail category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">VIEW DETAIL CATEGORY</h4>
                <form asp-controller="Category" asp-action="detailCate" enctype="multipart/form-data" method="post">
                    <div class="card-body">
                        <div class="mb-3">
                            <span asp-validation-for="cateID"></span>
                            <label asp-for="cateID" for="exampleFormControlReadOnlyInput1" class="form-label">ID</label>
                            <input class="form-control"
                                   type="text"
                                   asp-for="cateID"
                                   id="detailCateName"
                                   placeholder="ID"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <span asp-validation-for="cateName"></span>
                            <label asp-for="cateName" for="exampleFormControlReadOnlyInput1" class="form-label">Name</label>
                            <input class="form-control"
                                   type="text"
                                   asp-for="cateName"
                                   id="detailCateName"
                                   placeholder="name"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <label asp-for="cateImage" class="control-label">Image</label>
                            <div> <img src="~/Image/@Model.cateUrlImage" style="width: 100px; height: 100px" /></div>
                            <span asp-validation-for="cateImage" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <div>
                                <span asp-validation-for="cateDescription"></span>
                                <label asp-for="cateDescription" for="exampleFormControlTextarea1" class="form-label">Enter description of category</label>
                                <textarea readonly class="form-control" asp-for="cateDescription" id="detailCateDescription" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back to list</a>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@Model.cateID" asp-route-img="@Model.cateImage"
                               class="btn btn-primary">Update</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var render = new FileReader();

            render.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            render.readAsDataURL(fileInput.files[0]);
        }
    }
</script>

