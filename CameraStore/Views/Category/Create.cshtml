@model CameraStore.Models.Category

@{
    ViewData["Title"] = "Add new category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <!-- Form controls -->
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">ADD NEW CATEGORY</h4>
                <form asp-controller="Category" asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="card-body">
                    <div class="mb-3">
                        <span asp-validation-for="cateName"></span>
                        <label asp-for="cateName" for="exampleFormControlInput1" class="form-label">Name</label>
                        <input type="text"
                               class="form-control"
                               asp-for="cateName"
                               id="uploadCateName"
                               placeholder="Enter name of category" />
                    </div>
                    <div class="mb-3">
                            <label asp-for="cateImage" class="control-label">Image</label>
                            <input asp-for="cateImage" type="file" onchange="chooseFile(this)" accept="image/gif, image/jpeg, image/png" style="width: 100%" class="form-control" />
                            <div> <img style="height:200px;width:250px" id="image" /></div>
                            <span asp-validation-for="cateImage" class="text-danger"></span>
                    </div>
                    <div class = "mb-3">
                         <span asp-validation-for="cateDescription"></span>
                        <label asp-for="cateDescription" for="exampleFormControlTextarea1" class="form-label">Enter description of category</label>
                        <textarea asp-for="cateDescription" class="form-control" id="uploadCateDes" rows="3"></textarea>
                    </div>
                    <div class="col-sm-10">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back to list</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var render = new FileReader();

            render.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            render.readAsDataURL(fileInput.files[0]);
        }
    }
</script>