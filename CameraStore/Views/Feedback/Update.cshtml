@model IEnumerable<Feedback>

@{
    ViewData["Title"] = "Update feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <!-- Form controls -->
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">UPDATE FEEBACK</h4>
                <div class="card-body">
                    <div class="mb-3">
    <label for="exampleFormControlReadOnlyInput1" class="form-label">ID</label>
    <input
      class="form-control"
      type="text"
      id="exampleFormControlReadOnlyInput1"
      placeholder="ID"
      readonly
    />
  </div>
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1" class="form-label">User</label>
                        <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                            <option selected>Choose the role</option>
                            <option value="1">Customer</option>
                            <option value="2">Employee</option>
                            <option value="3">Owner</option>
                            <option value="3">Admin</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlSelect1" class="form-label">Product</label>
                        <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                            <option selected>Choose the role</option>
                            <option value="1">Customer</option>
                            <option value="2">Employee</option>
                            <option value="3">Owner</option>
                            <option value="3">Admin</option>
                        </select>
                    </div>
                    <div class ="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Enter comment of feedback</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="col-sm-10">
                        <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Back to list</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
