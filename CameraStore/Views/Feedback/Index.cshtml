@model IEnumerable<Feedback>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Feedback Table</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr class="text-nowrap">
                            <th style="width: 10%;">#</th>
                            <th style="width: 20%;">Account</th>
                            <th style="width: 20%;">Product</th>
                            <th style="width: 30%;">Comment</th>
                            <th style="width: 20%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var feedback in Model){
                        <tr>
                            <th scope="row">@feedback.feedID</th>
                            <td>@feedback.customerID</td>
                            <td>@feedback.proID</td>
                            <td>@feedback.feedDescription</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Feedback" asp-action="detailFeed" asp-route-id="@feedback.feedID"><i class="bx bx-book-alt me-1"></i> View Detail</a>
                                        <a class="dropdown-item" asp-controller="Feedback" asp-action="Edit" asp-route-id="@feedback.feedID"><i class="bx bx-edit-alt me-1"></i> Update</a>
                                        <a class="dropdown-item" asp-action="Delete" asp-route-id="@feedback.feedID" onclick="return confirm('Are you sure?');">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="buy-now">
    <a asp-controller="Feedback" asp-action="Create"
       class="btn btn-primary btn-buy-now">Add new Feedback</a>
</div>