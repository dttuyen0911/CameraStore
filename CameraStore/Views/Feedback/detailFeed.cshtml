@model CameraStore.Models.Feedback

@{
    ViewData["Title"] = "View detail feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h4 class="card-header" style="text-align:center">VIEW DETAIL FEEDBACK</h4>
                <form asp-controller="Feedback" asp-action="detailFeed" enctype="multipart/form-data" method="post">
                    <div class="card-body">
                        <div class="mb-3">
                            <span asp-validation-for="feedID"></span>
                            <label asp-for="feedID" for="exampleFormControlReadOnlyInput1" class="form-label">ID</label>
                            <input class="form-control"
                                   type="text"
                                   asp-for="feedID"
                                   id="detailFeedID"
                                   placeholder="ID"
                                   readonly />
                        </div>
                        <div class="mb-3">
                            <span asp-validation-for="customerID"></span>
                            <label asp-for="customerID" for="exampleFormControlInput1" class="form-label">Customer</label>
                            <input type="text"
                                   asp-for="customerID"
                                   readonly
                                   class="form-control"
                                   id="detailFeedCus" />
                        </div>
                        <div class="mb-3">
                            <span asp-validation-for="proID"></span>
                            <label asp-for="proID" for="exampleFormControlInput1" class="form-label">Product</label>
                            <input type="text"
                                   asp-for="proID"
                                   readonly
                                   class="form-control"
                                   id="detailFeedPro" />
                        </div>
                        <div class="mb-3">
                            <div>
                                <span asp-validation-for="feedDescription">Description</span>
                                <label asp-for="feedDescription" for="exampleFormControlTextarea1" class="form-label">Enter description of feedback</label>
                                <textarea readonly class="form-control" asp-for="feedDescription" id="detailFeedDes" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <a asp-controller="Feedback" asp-action="Index" class="btn btn-primary">Back to list</a>
                            <a asp-controller="Feedback" asp-action="Edit" asp-route-id="@Model.feedID"
                               class="btn btn-primary">Update</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
